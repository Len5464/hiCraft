<form
  class="modal fade needs-validation"
  action=""
  id="modal-login"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="modal-login-title"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-lg modal-fullscreen-lg-down">
    <div class="modal-content">
      <div class="modal-header">
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body p-6 p-lg-12">
        <img
          class="mb-12 mb-lg-16 mx-auto"
          src="../assets/images/hiCraft_logo.svg"
        />
        <h2
          id="modal-login-title"
          class="fw-bold text-center mb-12"
        >
          歡迎來到hiCraft
        </h2>
        <div class="mb-6">
          <label
            for="login-input-email"
            class="form-label"
            >電子郵件</label
          >
          <input
            type="email"
            class="form-control"
            id="login-input-email"
            placeholder="輸入電子郵件"
            aria-placeholder="輸入電子郵件"
            required
          />
        </div>
        <div class="mb-6">
          <label
            for="login-input-password"
            class="form-label"
            >密碼</label
          >
          <input
            type="password"
            class="form-control"
            id="login-input-password"
            placeholder="密碼"
            aria-placeholder="輸入密碼"
            required
            minlength="6"
          />
        </div>
        <ul class="list-unstyled mb-11 form-check d-flex justify-content-between">
          <li>
            <input
              type="checkbox"
              class="form-check-input"
              id="login-input-remember-accunt"
            />
            <label
              class="form-check-label"
              for="login-input-remember-accunt"
              >記住帳號</label
            >
          </li>
          <li>
            <a
              href="#modal-reset-password"
              role="button"
              data-bs-toggle="modal"
            >
              忘記密碼?
            </a>
          </li>
        </ul>
        <button
          type="submit"
          class="btn btn-primary w-100"
        >
          登入
        </button>
        <p class="text-center my-3 my-lg-6">或</p>
        <a
          href="#"
          class="btn btn-outline-primary w-100"
          >透過Google登入</a
        >
      </div>
    </div>
  </div>
</form>
<script
  type="module"
  src="/modules/modal-login.js"
></script>
